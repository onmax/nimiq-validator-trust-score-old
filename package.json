{
  "name": "trust-score-service",
  "version": "0.0.1",
  "description": "Calculates Trust Score for Nimiq Validators",
  "main": "./dist/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build && node dist/index.js",
    "build": "tsup src/*.ts --format esm --dts",
    "build:scripts": "tsup scripts/*.ts --format esm --dts --out-dir dist/scripts",
    "lint": "tsc",
    "ci": "pnpm lint && pnpm build"
  },
  "author": "onmax",
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/node": "^18.15.3",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "nimiq-rpc-client-ts": "^0.0.17",
    "redis-om": "^0.3.6"
  }
}
